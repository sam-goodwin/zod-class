{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "lib",
    "alwaysStrict": true,
    "baseUrl": ".",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2021",
    "types": ["@types/node", "@types/jest"]
  }
}
